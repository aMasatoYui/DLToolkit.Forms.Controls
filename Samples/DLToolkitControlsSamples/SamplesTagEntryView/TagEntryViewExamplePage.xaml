<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="DLToolkitControlsSamples.TagEntryViewExamplePage"
		xmlns:dltag="clr-namespace:DLToolkit.Forms.Controls;assembly=DLToolkit.Forms.Controls.TagEntryView">
	<ContentPage.Content>
		<dltag:TagEntryView TagItems="{Binding Items}" TagTappedCommand="{Binding RemoveTagCommand}" TagValidator="{Binding TagValidator}" Padding="8">
			<dltag:TagEntryView.TagEntry>
				<StackLayout Orientation="Horizontal">
					<Entry Keyboard="Email" HorizontalOptions="FillAndExpand" />
					<Button Text="Add" WidthRequest="32" HeightRequest="24" Command="{Binding AddCommand}"/>
				</StackLayout>
			</dltag:TagEntryView.TagEntry>
			<dltag:TagEntryView.TagItemTemplate>
				<DataTemplate>
					<Frame BackgroundColor="Silver" OutlineColor="Navy" Padding="10" HasShadow="false">
						<Label Text="{Binding Name}"/>
					</Frame>
				</DataTemplate>
			</dltag:TagEntryView.TagItemTemplate>
		</dltag:TagEntryView>
	</ContentPage.Content>
</ContentPage>
